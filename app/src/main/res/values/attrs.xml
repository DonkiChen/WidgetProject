<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SlideBar">
        <attr name="barNormalTextColor" format="color" />
        <attr name="barSelectedTextColor" format="color" />
        <attr name="barNormalTextSize" format="dimension" />
        <attr name="barSelectedTextSize" format="dimension" />
    </declare-styleable>

    <declare-styleable name="LabelView">
        <attr name="labelGravity" format="enum">
            <enum name="topLeft" value="0" />
            <enum name="topRight" value="1" />
            <enum name="bottomLeft" value="2" />
            <enum name="bottomRight" value="3" />
        </attr>
        <attr name="labelBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="ProgressTextView">
        <attr name="ptvColor" format="color" />
        <attr name="ptvWidth" format="dimension" />
        <attr name="ptvFitTextHeight" format="boolean" />
        <attr name="ptvIgnorePadding" format="boolean" />
    </declare-styleable>

    <declare-styleable name="PatternLock">
        <attr name="plMinSelectedCount" format="integer" />
        <attr name="plPointColor" format="color" />
        <attr name="plErrorPointColor" format="color" />
        <attr name="plLineColor" format="color" />
        <attr name="plErrorLineColor" format="color" />
        <attr name="plPointTouchRadius" format="dimension" />
        <attr name="plPointRadius" format="dimension" />
        <attr name="plSpanCount" format="integer" />
    </declare-styleable>

    <declare-styleable name="DragDownLinearLayout">
        <attr name="ddllDismissDistance" format="dimension" />
        <attr name="ddllDismissRatio" format="float" />
    </declare-styleable>
</resources>