<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fl_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <test.widgetproject.widget.ProgressTextView
        android:id="@+id/tv_concerned"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_gray_stroke_1dp_corner_4dp"
        android:gravity="center"
        android:text="已关注"
        android:textColor="#FFF"
        app:ptvFitTextHeight="true"
        tools:ignore="HardcodedText" />

    <test.widgetproject.widget.ProgressTextView
        android:id="@+id/tv_concern"
        android:layout_width="88dp"
        android:layout_height="36dp"
        android:layout_gravity="center"
        android:background="@drawable/bg_blue_stroke_1dp_corner_4dp"
        android:gravity="center"
        android:text="+ 关注"
        android:textColor="#FFF"
        app:ptvFitTextHeight="true"
        tools:ignore="HardcodedText" />

    <ProgressBar
        android:layout_gravity="center"
        android:layout_marginBottom="42dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</FrameLayout>